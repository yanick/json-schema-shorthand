{
  "name": "json-schema-shorthand",
  "version": "0.2.0",
  "description": "Shortcuts for json schema definitions",
  "main": "dist-node/json-schema-shorthand.js",
  "scripts": {
    "test": "babel-tap test",
    "build-node": "babel src --out-dir dist-node",
    "build-browser": "npm run browserify && npm run uglify",
    "browserify": "browserify --standalone helloJavascript dist-node | derequire > dist/hello-javascript.js",
    "uglify": "uglifyjs -mc < dist/hello-javascript.js > dist/hello-javascript.min.js",
    "clean": "rm -fr dist/* dist-node/*",
    "build": "npm run clean && npm run build-node",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yanick/json-schema-shorthand.git"
  },
  "keywords": [
    "json",
    "schema"
  ],
  "author": "Yanick Champoux <yanick@babyl.ca> (http://techblog.babyl.ca)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yanick/json-schema-shorthand/issues"
  },
  "homepage": "https://github.com/yanick/json-schema-shorthand#readme",
  "dependencies": {
    "babel-tap": "^5.0.0",
    "lodash": "^4.14.1"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.11.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-1": "^6.5.0",
    "tap": "^6.3.0"
  }
}
