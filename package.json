{
  "name": "json-schema-shorthand",
  "version": "2.0.0",
  "description": "Shortcuts for json schema definitions",
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
  },
  "repository": "git+https://github.com/yanick/json-schema-shorthand.git",
  "keywords": [
    "json",
    "schema"
  ],
  "author": "Yanick Champoux <yanick@babyl.ca> (http://techblog.babyl.ca)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yanick/json-schema-shorthand/issues"
  },
  "homepage": "https://github.com/yanick/json-schema-shorthand#readme",
  "dependencies": {
    "json-schema": "^0.4.0",
    "lodash": "^4.17.19",
    "remeda": "^1.19.0",
    "updeep": "^1.2.0"
  },
  "devDependencies": {
    "@types/json-schema": "^7.0.5",
    "@types/lodash": "^4.14.159",
    "@vitest/coverage-c8": "^0.31.3",
    "@vitest/ui": "^0.31.3",
    "eslint": "7.5.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-lodash": "^7.1.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.10.0",
    "npm-run-all": "^4.1.5",
    "tap": "^14.10.8",
    "typescript": "^3.9.7",
    "vitest": "^0.31.3"
  },
  "release": {
    "repositoryUrl": "ssh://git@github.com/yanick/json-schema-shorthand.git",
    "branches": [
      "releases",
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm"
    ]
  },
  "eslintConfig": {
    "env": {
      "amd": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "prettier",
      "eslint:recommended",
      "plugin:you-dont-need-lodash-underscore/compatible",
      "plugin:lodash/recommended"
    ],
    "ignorePatterns": [
      "src/node_modules"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "modules": true
      },
      "ecmaVersion": "2020",
      "sourceType": "module"
    },
    "rules": {
      "lodash/prefer-lodash-method": "off"
    }
  }
}
